package viewMeowV1

import (
	"fmt"
	meowerv1 "github.com/AlyxPink/meower/api/implementation/meower/v1"
	"github.com/AlyxPink/meower/internal/web/views/layouts"
	"github.com/gofiber/fiber/v2"
)

templ Index(c *fiber.Ctx, r *meowerv1.IndexResponse) {
	@layouts.Main(c) {
		<h1>{ fmt.Sprint(len(r.Meows)) } Meows found</h1>
		<ul>
			for _, m := range r.Meows {
				<li class="py-2">
					<span class="font-mono rounded bg-pink-200 p-2">#{ m.Id } { `@` } { m.CreatedAt }</span>
					<span class="font-bold">Meow { m.Name } :3</span>
				</li>
			}
		</ul>
	}
}
