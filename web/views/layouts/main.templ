package layouts

import (
	"github.com/AlyxPink/meower/web/views/components"
	"github.com/AlyxPink/meower/web/views/components/global"
	"github.com/AlyxPink/meower/web/views/components/headers"
	"github.com/gofiber/fiber/v2"
)

templ Main(c *fiber.Ctx) {
	<!DOCTYPE html>
	<html lang="en" class="scroll-smooth selection:bg-black selection:text-pink-500">
		<head>
			@components.BaseHead()
		</head>
		<body>
			<main class="items-center w-full grid mx-auto 2xl:max-w-7xl space-y-8">
				@headers.NameHeader()
				@global.Navigation(c)
				{ children... }
				@global.Footer()
			</main>
		</body>
	</html>
}
